{
  "name": "vrchat-booth-manager",
  "version": "0.2.0",
  "description": "VRChat改変向けBooth商品管理ツール",
  "main": "main.js",
  "scripts": {
    "start": "npm run compile && electron .",
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:5185 && npm run dev:electron\"",
    "dev:react": "cd renderer && npm run dev",
    "dev:electron": "npm run compile && nodemon --exec electron . --ignore renderer/ --ignore dist/",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "compile": "tsc",
    "build": "npm run compile && npm run build:react && npm run build:electron",
    "build:react": "cd renderer && npm run build",
    "build:electron": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "vrchat",
    "booth",
    "avatar",
    "manager"
  ],
  "author": "VRChat Booth Manager Team",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@playwright/test": "^1.54.2",
    "better-sqlite3": "^9.2.2",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^6.1.7",
    "puppeteer": "^24.15.0"
  },
  "build": {
    "appId": "com.vrchat.boothmanager",
    "productName": "VRChat Booth Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "dir",
      "icon": "assets/icon.ico",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "compression": "store",
    "npmRebuild": false
  }
}
